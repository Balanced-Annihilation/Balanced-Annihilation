			texture=lightb2;
			airdrag=0.95;
			particleLife=3;
			particleLifeSpread=6;
			numParticles=1;
			particleSpeed=1;
			particleSpeedSpread=0;
			particleSize=20;
			particleSizeSpread=30;
			directional=1;
			emitRot=0;
			emitRotSpread=360;
		}
		air=1;
		water=0;
		ground=0;
		unit=1;
		count=3;
	}
	
	usedefaultexplosions=0;
	[groundflash]
	{
		flashSize = 28;
		flashAlpha = 1.2;
		ttl = 16;
		color=0.55,0.7,0.9;
	}
		
		
}

