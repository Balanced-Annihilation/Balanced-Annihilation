	{
	class=heatcloud;
   	
		[properties]
      		{
		    texture=brightblueexplo;
      		heat = 11;
      		maxheat = 15;
      		heatFalloff = 1.3;

      		size = 2;
      		sizeGrowth = 3;

         	pos = 0, 2, 0;
