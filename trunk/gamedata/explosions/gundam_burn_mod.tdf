[BURN]
{
	[searingflame]
	{
	class=CSimpleParticleSystem;

		[properties]
		{
		alwaysVisible=1;
		Texture=gunshot;

		colorMap	= 0.9 0.5 0.4 0.04	0.9 0.4 0.1 0.01	0.5 0.1 0.1 0.01;

      		pos 		= 0, 2, 0;
		gravity		= 0, -0.01, 0;
	       	emitVector	= 0, 1, 0;
		emitRot		= 45;
		emitRotSpread	= 32;

		sizeGrowth	= 1;
		sizeMod		= 0.5;

		airdrag			= 0.8;
		particleLife		= 10;
		particleLifeSpread	= 5;
		numParticles		= 2;
		particleSpeed		= 5;
		particleSpeedSpread	= 6;
		particleSize		= 12;
		particleSizeSpread	= 0;

		directional		= 1;
		useAirLos		= 0;
		}
	air=1;
	unit=1;
	ground=0;
	count=1;
	}


	[burnpop]
	{
	class=heatcloud;
   	
		[properties]
      		{
		    texture=redexplo;
      		heat = 10;
      		maxheat = 15;
      		heatFalloff = 0.4;

      		size = 4;
      		sizeGrowth = 0.6;

         	pos = r-2 r2, r0 r1, r-2 r2;
         	emitRot=50;
			emitRotSpread=50;
			directional=1;
         	speed=0, 0, 0;
      		}
	    air=1;
      	water=1;
      	ground=1;
      	count=1;
	}
	
	[groundflash]
	{
		flashSize = 8;
		flashAlpha = 1;
		circleGrowth = 3;
		circleAlpha = 0.1;
		ttl = 8;
		color = 0.8, 0.2, 0.0;
	}
}

