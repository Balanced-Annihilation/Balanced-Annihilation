Killed(severity, corpsetype)
{
	if( severity <= 25 )
	{
		corpsetype = 1;
		return (corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2;
		explode lfoot type FALL | BITMAP1 | NOHEATCLOUD;
		explode lleg type FALL | BITMAP1 | NOHEATCLOUD;
		explode ltong type SHATTER | BITMAP1 | NOHEATCLOUD;
		explode pelvis type FALL | BITMAP1 | NOHEATCLOUD;
		explode rfoot type FALL | BITMAP1 | NOHEATCLOUD;
		explode rleg type FALL | BITMAP1 | NOHEATCLOUD;
		explode rtong type FALL | BITMAP1 | NOHEATCLOUD;
		explode tongend type FALL | BITMAP1 | NOHEATCLOUD;
		explode tongpivot type FALL | BITMAP1 | NOHEATCLOUD;
		return (corpsetype);
