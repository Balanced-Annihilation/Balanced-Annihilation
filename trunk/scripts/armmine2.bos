Activate()
{
	set ARMORED to 1;
}

Deactivate()
{
	set ARMORED to 0;
}

FireWeapon1()
{
	sleep 500; //A slight delay
	emit-sfx 4096 + 1 from detonation;; //Weapon2 detonates the mine once weapon1 fires
}

