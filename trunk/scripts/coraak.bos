{
	hide fire1;
	hide fire2;
	hide fire3;
	hide fire4;
	hide fire5;
	hide fire6;
	hide flak_fire;
	hide lmiss_fire;
	hide rmiss_fire;
	start-script MotionControl();
	start-script SmokeUnit();
	bMoving = FALSE;
}

