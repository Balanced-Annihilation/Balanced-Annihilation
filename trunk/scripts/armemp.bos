SmokeUnit(healthpercent, sleeptime, smoketype)
{
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 400;
	}
	while( TRUE )
	{
		healthpercent = get HEALTH;
		if( healthpercent < 66 )
		{
			smoketype = 256 | 2;
			if( Rand( 1, 66 ) < healthpercent )
			{
				smoketype = 256 | 1;
			}
			emit-sfx smoketype from base;
		}
		sleeptime = healthpercent * 50;
		if( sleeptime < 200 )
		{
			sleeptime = 200;
		}
		sleep sleeptime;
	}
	return (0);
}

Go()
{
	call-script activatescr();
	gun_1 = launch;
	return (0);
}

Stop()
{
	gun_1 = base;
	sleep 4000;
	call-script deactivatescr();
	show dummy;
	return (0);
}

InitState()
{
	statechg_DesiredState = TRUE;
	statechg_StateChanging = FALSE;
	return (0);
}

RequestState(requestedstate, currentstate)
{
	if( statechg_StateChanging )
	{
		statechg_DesiredState = requestedstate;
		return (0);
	}
	statechg_StateChanging = TRUE;
	currentstate = statechg_DesiredState;
	statechg_DesiredState = requestedstate;
	while( statechg_DesiredState != currentstate )
	{
		if( statechg_DesiredState == 0 )
		{
			call-script Go();
			currentstate = 0;
		}
		if( statechg_DesiredState == 1 )
		{
			call-script Stop();
			currentstate = 1;
		}
	}
	statechg_StateChanging = FALSE;
	return (0);
}

Create()
{
	gun_1 = base;
	dont-shade base;
	dont-shade Door1;
	dont-shade Door2;
	dont-shade dummy;
	dont-shade Frame1;
	dont-shade Frame2;
	dont-shade Frame3;
	dont-shade Frame4;
	dont-shade Cover1;
	dont-shade Cover2;
	dont-cache Door1;
	dont-cache Door2;
	dont-cache dummy;
	dont-cache Frame1;
	dont-cache Frame2;
	dont-cache Frame3;
	dont-cache Frame4;
	dont-cache Cover1;
	dont-cache Cover2;
	restore_delay = 3000;
	start-script SmokeUnit();
	call-script InitState();
	return (0);
}

Activate()
{
	start-script RequestState(0);
	return (0);
}

Deactivate()
{
	start-script RequestState(1);
	return (0);
}

SetMaxReloadTime(Func_Var_1)
{
	restore_delay = Func_Var_1 * 2;
	return (0);
}

RestoreAfterDelay()
{
	sleep restore_delay;
	set-signal-mask 0;
	start-script RequestState(1);
	return (0);
}

AimPrimary(heading, pitch)
{
	start-script RequestState(0);
	signal SIG_AIM;
	set-signal-mask SIG_AIM;
	while( !gun_1 )
	{
		sleep 250;
	}
	start-script RestoreAfterDelay();
	return (1);
}

FirePrimary()
{
	hide dummy;
	gun_1 = base;
	start-script RequestState(1);
	return (0);
}

QueryPrimary(piecenum)
{
	piecenum = launch;
	return (0);
}

SweetSpot(piecenum)
{
	piecenum = base;
	return (0);
}

Killed(severity, corpsetype)
{
	if( severity <= 25 )
	{
		corpsetype = 1;
		explode base type NOHEATCLOUD;
		explode Door1 type NOHEATCLOUD;
		explode Door2 type NOHEATCLOUD;
		explode dummy type NOHEATCLOUD;
		explode Frame1 type NOHEATCLOUD;
		explode Frame2 type NOHEATCLOUD;
		explode Frame3 type NOHEATCLOUD;
		explode Frame4 type NOHEATCLOUD;
		explode Cover1 type NOHEATCLOUD;
		explode Cover2 type NOHEATCLOUD;
		explode launch type NOHEATCLOUD;
		return (corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2;
		explode base type NOHEATCLOUD;
		explode Door1 type NOHEATCLOUD;
		explode Door2 type NOHEATCLOUD;
		explode dummy type NOHEATCLOUD;
		explode Frame1 type NOHEATCLOUD;
		explode Frame2 type NOHEATCLOUD;
		explode Frame3 type NOHEATCLOUD;
		explode Frame4 type SHATTER | BITMAP3 | NOHEATCLOUD;
		explode Cover1 type FALL | BITMAP4 | NOHEATCLOUD;
		explode Cover2 type FALL | BITMAP5 | NOHEATCLOUD;
		explode launch type FALL | BITMAP1 | NOHEATCLOUD;
		return (corpsetype);
	}
	if( severity <= 99 )
	{
		corpsetype = 3;
		explode base type NOHEATCLOUD;
		explode Door1 type NOHEATCLOUD;
		explode Door2 type NOHEATCLOUD;
		explode dummy type NOHEATCLOUD;
		explode Frame1 type NOHEATCLOUD;
		explode Frame2 type NOHEATCLOUD;
		explode Frame3 type NOHEATCLOUD;
		explode Frame4 type SHATTER | BITMAP3 | NOHEATCLOUD;
		explode Cover1 type FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP4 | NOHEATCLOUD;
		explode Cover2 type FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP5 | NOHEATCLOUD;
		explode launch type FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP1 | NOHEATCLOUD;
		return (corpsetype);
	}
	corpsetype = 3;
	explode base type NOHEATCLOUD;
	explode Door1 type NOHEATCLOUD;
	explode Door2 type NOHEATCLOUD;
	explode dummy type NOHEATCLOUD;
	explode Frame1 type NOHEATCLOUD;
	explode Frame2 type NOHEATCLOUD;
	explode Frame3 type NOHEATCLOUD;
	explode Frame4 type SHATTER | EXPLODE_ON_HIT | BITMAP3 | NOHEATCLOUD;
	explode Cover1 type FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP4 | NOHEATCLOUD;
	explode Cover2 type FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP5 | NOHEATCLOUD;
	explode launch type FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP1 | NOHEATCLOUD;
	return (corpsetype);
}
