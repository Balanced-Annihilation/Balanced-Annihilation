#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, solarbase, rotatepart, dish, faces, supports;


SmokeUnit(healthpercent, sleeptime, smoketype)
{
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 400;
	}
	while( TRUE )
	{
		healthpercent = get HEALTH;
		if( healthpercent < 66 )
		{
			smoketype = 256 | 2;
			if( Rand( 1, 66 ) < healthpercent )
			{
				smoketype = 256 | 1;
			}
			emit-sfx smoketype from solarbase;
		}
		sleeptime = healthpercent * 50;
		if( sleeptime < 200 )
		{
			sleeptime = 200;
		}
		sleep sleeptime;
	}
	return (0);
}

Activate()
{
	set ARMORED to 0;
	return (0);
}

Deactivate()
{
	set ARMORED to 1;
	return (0);
}

Create()
{
	start-script SmokeUnit();
	return (0);
}

SweetSpot(piecenum)
{
	piecenum = solarbase;
	return (0);
}

HitByWeapon(anglex, anglez)
{
	signal 2;
	set-signal-mask 2;
	set ACTIVATION to 0;
	sleep 8000;
	set ACTIVATION to 100;
	return (0);
}

Killed(severity, corpsetype)
{
	if( severity <= 25 )
	{
		corpsetype = 1;
		explode base type NOHEATCLOUD;
		explode solarbase type NOHEATCLOUD;
		explode supports type NOHEATCLOUD;
		explode rotatepart type NOHEATCLOUD;
		explode dish type NOHEATCLOUD;
		return (corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2;
		explode base type NOHEATCLOUD;
		explode solarbase type NOHEATCLOUD;
		explode supports type NOHEATCLOUD;
		explode rotatepart type NOHEATCLOUD;
		explode dish type NOHEATCLOUD;
		return (corpsetype);
	}
	if( severity <= 99 )
	{
		corpsetype = 3;
		explode base type NOHEATCLOUD;
		explode solarbase type NOHEATCLOUD;
		explode supports type NOHEATCLOUD;
		explode rotatepart type NOHEATCLOUD;
		explode dish type NOHEATCLOUD;
		return (corpsetype);
	}
	corpsetype = 3;
	explode base type NOHEATCLOUD;
	explode solarbase type NOHEATCLOUD;
	explode supports type NOHEATCLOUD;
	explode rotatepart type NOHEATCLOUD;
	explode dish type NOHEATCLOUD;
	return (corpsetype);
}
